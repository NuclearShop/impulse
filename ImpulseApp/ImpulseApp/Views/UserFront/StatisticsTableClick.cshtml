@{
    ViewBag.Title = "StatisticsTableClick";
    Layout = null;
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header" ng-bind="header"></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">

    <div class="form-inline">
        <div ng-show="isShowAdSelector">
            @{Html.RenderAction("GetCurrentUserAds", "Additional", new { AdId = Model });}
        </div>
        C: <input id="DateStart" type="date" class="form-control" ng-model="dateStart" />
        По: <input id="DateEnd" type="date" class="form-control" ng-model="dateEnd" />
        <input ng-hide="isShowAdSelector" type="number" class="form-control" ng-model="daysStep" placeholder="период" min="1" />
        <button id="addAd" class="btn btn-default" ng-click="loadTable()">Выбрать</button>
        <div class="pull-right" ng-show="isShowAdSelector">
            Экспорт в PDF:
            <button class="btn btn-default export-pdf" ng-click="generateReport(false)">Видимая таблица</button>
            <button class="btn btn-default export-pdf" ng-click="generateReport(true)">Вся таблица</button>
        </div>
        <div ng-show="showMap"><a href="/#/graphics/locale">Показать на карте</a></div>
    </div>

</div>
<div class="row">
     <div ng-hide="isShowAdSelector" ui-grid="gridOptions" ui-grid-pagination ui-grid-selection ui-grid-exporter></div>
    <div id="tablediv" ng-show="isShowAdSelector"></div>
</div>